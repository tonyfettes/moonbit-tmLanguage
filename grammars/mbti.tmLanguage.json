{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "mbti",
  "scopeName": "source.mbti",
  "patterns": [
    {
      "include": "#deprecated"
    },
    {
      "include": "#packageName"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#comments"
    },
    {
      "include": "#functions"
    },
    {
      "include": "#values"
    },
    {
      "include": "#types"
    }
  ],
  "repository": {
    "keywords": {
      "patterns": [
        {
          "name": "keyword",
          "match": "\\b(package|alias|fn|type|impl|as|for)\\b"
        },
        {
          "name": "storage.type.function.arrow.moonbit",
          "match": "->"
        }
      ]
    },
    "packageName": {
      "patterns": [
        {
          "name": "entity.name",
          "match": "@[a-zA-Z][a-zA-Z0-9_/]*"
        },
        {
          "begin": "\\b(package)\\s+",
          "end": "\\n",
          "beginCaptures": {
            "1": {
              "name": "keyword"
            }
          },
          "patterns": [
            {
              "name": "entity.name",
              "match": "[a-zA-Z][a-zA-Z0-9_]*"
            }
          ]
        }
      ]
    },
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash",
          "match": "//.*"
        }
      ]
    },
    "values": {
      "patterns": [
        {
          "name": "variable",
          "match": "\\b[a-z_][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "entity.name.type",
          "match": "\\b[A-Z][A-Za-z0-9_]*\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "match": "([a-z_][a-zA-Z0-9_]*)(\\[|\\()",
          "captures": {
            "1": { "name": "entity.name.function" }
          }
        }
      ]
    }
  }
}
